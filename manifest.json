{

  "manifest_version": 2,
  "name": "VSL",
  "version": "0.0.1",
  "description": "Loops a specific section of a video",

  "homepage_url": "https://github.com/aprestoes/loopcontrol",

  "permissions": ["storage"],

  "icons": {
    "32": "icons/icon-32.png"
  },

  "content_scripts": [
    {
      "all_frames": true,
      "matches": ["http://*/*", "https://*/*", "file:///*"],
      "js": ["vsl.js"],
      "css": ["inject.css"],
      "match_about_blank": true,
      "exclude_matches": [
        "https://plus.google.com/hangouts/*",
         "https://www.google.com/flights/*",
         "https://hangouts.google.com/*",
         "https://meet.google.com/*"
      ]
    }
  ],

  "browser_action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    },
    "theme_icons": [{
      "light": "icons/icon-16-light.png",
      "dark": "icons/icon-16.png",
      "size": 16
    }, {
      "light": "icons/icon-32-light.png",
      "dark": "icons/icon-32.png",
      "size": 32
    }],
    "default_popup": "popup.html"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "addon@example.com"
    }
  },

  "web_accessible_resources": ["inject.css", "shadow.css"]
}